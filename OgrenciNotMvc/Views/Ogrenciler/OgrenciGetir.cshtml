@model OgrenciNotMvc.Models.EntityFramework.TBLOGRENCILER
@{
    ViewBag.Title = "OgrenciGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğrenci Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("Güncelle", "Ogrenciler", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.OGRAD)
        @Html.TextBoxFor(m => m.OGRAD, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OGRSOYAD)
        @Html.TextBoxFor(m => m.OGRSOYAD, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OGRFOTO)
        @Html.TextBoxFor(m => m.OGRFOTO, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OGRCINSIYET)
        @Html.TextBoxFor(m => m.OGRCINSIYET, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OGRKULUP)
        @Html.DropDownListFor(m => m.TLBKULUPLER.KULUPID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        
        <br />
    </div>
    @Html.HiddenFor(m => m.OGRRENCIID)
    <br />
    <div>
        <button class="btn btn-info">Güncelle</button>
    </div>
}

