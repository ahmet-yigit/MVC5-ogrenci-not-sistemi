@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Öğrenci Listesi</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ADI</th>
        <th>Soyadı</th>
        <th>Cinsiyet</th>
        <th>Kulüp</th>
        <th>İşlemler</th>

    </tr>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.OGRRENCIID</td>
            <td>@x.OGRAD</td>
            <td>@x.OGRSOYAD</td>
            <td>@x.OGRCINSIYET</td>
            <td>@x.TLBKULUPLER.KULUPAD</td>
            <td>
                <a href="/Ogrenciler/Sil/@x.OGRRENCIID" class="btn btn-danger">Sil</a>
                <a href="/Ogrenciler/OgrenciGetir/@x.OGRRENCIID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Ogrenciler/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Ekle</a>

