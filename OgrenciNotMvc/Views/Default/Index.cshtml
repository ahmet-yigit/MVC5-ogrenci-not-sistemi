@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLDERSLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Ders Listesi</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.DERSID</td>
                <td>@x.DERSAD</td>
                <td>
                    <a href="/Default/Sil/@x.DERSID" class="btn btn-danger">Sil</a>
                    <a href="/Default/DersGetir/@x.DERSID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-primary">Ders Ekle</a>

